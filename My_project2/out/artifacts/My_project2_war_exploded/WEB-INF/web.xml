<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>AccessAddBrigadeFilter</filter-name>
        <filter-class>com.netcracker.petrusev.project2.filters.AccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccessAddBrigadeFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <filter>
        <filter-name>UTFCodeFilter</filter-name>
        <filter-class>com.netcracker.petrusev.project2.filters.UTFCodeFilter</filter-class>
    <init-param>
        <param-name>encoding</param-name>
        <param-value>UTF-8</param-value>
    </init-param>
    </filter>
    <filter-mapping>
        <filter-name>UTFCodeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


</web-app>